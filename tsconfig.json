{
  "compilerOptions": {
    "declaration": true,
    "target": "ES5",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "removeComments": true,
    "sourceMap": true,
    "noLib": false,
    "lib": ["dom", "es6", "es5", "dom.iterable", "scripthost"],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
